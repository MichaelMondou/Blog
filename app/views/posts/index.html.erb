<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date de publication</th>
      <th>Chapeau</th>
      <th>Image</th>
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.publish_date.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= post.heading %></td>
        <td><%= post.image %></td>
        <td><%= post.user.fullname %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= paginate @posts %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
