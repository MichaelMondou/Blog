<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date de publication</th>
      <th>Chapeau</th>
      <th>Image</th>
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.publish_date.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= post.heading %></td>
        <td><%= post.image %></td>
        <td>
          <% if !post.user.nil? %>
            <%= post.user.fullname %>
          <% else %>
            Non renseign√©
          <% end %>
        </td>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    <%= paginate @posts %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
