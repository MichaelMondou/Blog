
<div class="center" style="margin-bottom: 20px;">
  <h1>Posts</h1>
</div>

<% @posts.each do |post| %>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <%= link_to post.title, post_path(post) %> <%= link_to post.user.fullname, user_path(post.user), class: "pull-right" %>
            </div>
            <div class="panel-body text-center">
              <h6><%= post.image %></h6>
              <h6><%= post.publish_date.strftime('%d/%m/%Y %H:%M') %></h6>
              <h5><%= post.heading %> </h5>
              <%= link_to 'Show', post, class: "btn btn-default" %>
              <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
            </div>
          </div>
        </div>
    </div>
<% end %>

<div class="center">
  <%= paginate @posts %>
</div>

<br>

<div class="center">
  <%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
</div>
