<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
  <p>Bonjour <%= "#{current_user.fullname}" %> (<%= link_to "sign out", destroy_user_session_path, :method => "delete" %>)</p>
  <% else %>
  <%= link_to "Connexion", new_user_session_path, :class => "btn btn-default" %>
  <% end %>
    <%= yield %>
  </body>
</html>
